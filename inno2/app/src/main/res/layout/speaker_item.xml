<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:id="@+id/speaker_layout">

    <ImageView
        android:id="@+id/speaker_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/speaker_name"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_alignTop="@+id/speaker_pic"
        android:layout_toRightOf="@+id/speaker_pic"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/speaker_title"
        android:layout_marginTop="5dp"
        android:layout_width="235dp"
        android:layout_height="35dp"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/speaker_name"
        android:layout_alignLeft="@+id/speaker_name"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/schedule_arrow"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/speaker_title"
        android:layout_toEndOf="@+id/speaker_title"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="3dp"/>

</RelativeLayout>
